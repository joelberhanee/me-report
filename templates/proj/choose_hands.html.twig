{% extends 'proj_base.html.twig' %}

{% block title %}Välj antal händer{% endblock %}

{% block body %}
<div class="info-container">
    <h1 class="bj-heading">Hej {{ player_name }}, välj antal händer att spela</h1>
    <p class="bj-text">Ditt saldo: <strong>{{ player_balance }} kr</strong></p>

    <form action="{{ path('proj_set_hands') }}" method="post" class="bj-form">
        <label for="hands">Antal händer (1-3):</label>
        <select name="hands" id="hands" required>
            {% for i in 1..3 %}
                <option value="{{ i }}" {% if old_hands == i %}selected{% endif %}>{{ i }}</option>
            {% endfor %}
        </select>

        <button type="submit" class="bj-btn bj-btn--draw">Välj och fortsätt</button>
    </form>

    {{ include('flash.html.twig') }}
</div>
{% endblock %}
