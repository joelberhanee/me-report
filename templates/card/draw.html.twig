{% extends 'base.html.twig' %}

{% block title %}Dra ett kort{% endblock %}

{% block body %}
    <h1>Dra ett kort</h1>
    <p>Du drog f√∂ljande kort:</p>
    <div class="card-deck">
        {% for card in cards %}
            {% set suit = card.getSuit() %}
            <div class="card {{ suit }}">
                {{ card }}
            </div>
        {% endfor %}
    </div>
    <p>{{ left }} kort kvar i kortleken.</p>

    <ul>
        <li><a href="{{ path('card_draw') }}">Dra ett kort</a></li>
        <li><a href="{{ path('card_draw_number', {'number': 5}) }}">Dra 5 kort</a></li>
        <li><a href="{{ path('card_shuffle') }}">Blanda kortlek</a></li>
        <li><a href="{{ path('session_restart') }}">Starta om spelet</a></li>
    </ul>

    {{ include('flash.html.twig') }}
{% endblock %}
