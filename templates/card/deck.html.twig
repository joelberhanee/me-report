{% extends 'base.html.twig' %}

{% block title %}Visa kortlek{% endblock %}

{% block body %}
    <h1>Kortlek - Sorterad</h1>
    <p>Totalt {{ cards|length }} kort:</p>
    <div class="card-deck">
        {% for card in cards %}
            {% set suit = card.getSuit() %}
            <div class="card {{ suit }}">
                {{ card }}
            </div>
        {% endfor %}
    </div>

    <ul>
        <li><a href="{{ path('card_shuffle') }}">Blanda kortlek</a></li>
        <li><a href="{{ path('card_draw') }}">Dra ett kort</a></li>
        <li><a href="{{ path('card_draw_number', {'number': 5}) }}">Dra 5 kort</a></li>
        <li><a href="{{ path('session_restart') }}" class="btn btn-danger">Starta om spelet</a></li>
    </ul>

    {{ include('flash.html.twig') }}
{% endblock %}
